<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XAUMobile.SearchGamertagPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:XAUMobile.Controls"
    xmlns:local="clr-namespace:XAUMobile"
    Title=""
    Shell.NavBarIsVisible="true">
    <AbsoluteLayout>
        <StackLayout
            Padding="10"
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            AbsoluteLayout.LayoutFlags="All"
            Spacing="10">

            <VerticalStackLayout
                x:Name="GamerProfileSection"
                HorizontalOptions="Center"
                IsVisible="false"
                Spacing="15">

                <!--  clean shit later  -->
                <Label
                    FontSize="Large"
                    HorizontalOptions="Center"
                    Text=""
                    TextColor="{DynamicResource Primary}" />

                <Frame
                    Padding="0"
                    BackgroundColor="{DynamicResource CardBg}"
                    BorderColor="{DynamicResource Primary}"
                    CornerRadius="75"
                    HeightRequest="150"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True"
                    WidthRequest="150">
                    <Image
                        x:Name="GamerProfileImage"
                        Aspect="AspectFill"
                        HeightRequest="150"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        WidthRequest="150" />
                </Frame>

                <Frame
                    Margin="2,4"
                    Padding="12"
                    BackgroundColor="{DynamicResource CardBg}"
                    BorderColor="Transparent"
                    CornerRadius="8"
                    HasShadow="True">
                    <Grid
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="15"
                        RowDefinitions="Auto,Auto,Auto"
                        RowSpacing="10">

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="XUID:"
                            TextColor="{DynamicResource Primary}"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="LBL_GamerXUID"
                            Grid.Row="0"
                            Grid.Column="1"
                            Text=""
                            TextColor="{StaticResource Secondary}"
                            VerticalOptions="Center" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Gamertag:"
                            TextColor="{DynamicResource Primary}"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="LBL_GamertagValue"
                            Grid.Row="1"
                            Grid.Column="1"
                            Text=""
                            TextColor="{StaticResource Secondary}"
                            VerticalOptions="Center" />

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Gamerscore:"
                            TextColor="{DynamicResource Primary}"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="LBL_GamerscoreValue"
                            Grid.Row="2"
                            Grid.Column="1"
                            Text=""
                            TextColor="{StaticResource Secondary}"
                            VerticalOptions="Center" />
                    </Grid>
                </Frame>

                <Button
                    x:Name="ViewGamesButton"
                    Margin="0,10,0,0"
                    BackgroundColor="{DynamicResource Primary}"
                    Clicked="OnViewGamesClicked"
                    IsVisible="false"
                    Text="View Games"
                    TextColor="{StaticResource Secondary}" />


            </VerticalStackLayout>

            <StackLayout VerticalOptions="FillAndExpand" />

            <StackLayout Padding="10">
                <Entry
                    x:Name="GamertagEntryField"
                    HorizontalTextAlignment="Center"
                    Placeholder="{local:Translate Gamertag}"
                    VerticalOptions="Center" />

                <Button
                    x:Name="SearchGamertagButton"
                    Margin="0,5,0,0"
                    BackgroundColor="{DynamicResource Primary}"
                    Clicked="SearchGamertag"
                    HorizontalOptions="FillAndExpand"
                    Text="{local:Translate TabBarSearch}"
                    TextColor="White" />
            </StackLayout>

        </StackLayout>

        <ActivityIndicator
            x:Name="GamertagSearchIndicator"
            AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            IsRunning="false"
            IsVisible="false"
            Color="{DynamicResource Primary}" />

        <controls:CallToAction
            x:Name="CallToActionControl"
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            AbsoluteLayout.LayoutFlags="All" />
    </AbsoluteLayout>
</ContentPage>